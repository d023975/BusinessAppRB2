{
  "name": "BusinessAppRB2",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "@sap/xsenv": "^3.1.1",
    "@sap/xssec": "^3.2.12",
    "express": "^4",
    "hdb": "^0.18.3",
    "passport": "^0.5.2"
  },
  "devDependencies": {
    "@sap/hdi-deploy": "^4.2.3",
    "@sap/ux-specification": "^1.96.2",
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "cds run"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "hana"
      },
      "app-service": {
        "impl": "srv/LCAPApplicationService.js"
      },
      "uaa": {
        "kind": "xsuaa",
        "credentials": {}
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  },
  "lcap": true,
  "sapux": [
    "app/CapexReport"
  ]
}
